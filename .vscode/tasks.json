{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build enum_int example",
			"type": "shell",
			"command": "Push-Location '${workspaceFolder}\\examples'; cl.exe /EHsc /std:c++latest /I.. /Fe:enum_int_example.exe enum_int.cpp enum_int_main.cpp; Pop-Location",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "build enum_string example",
			"type": "shell",
			"command": "Push-Location '${workspaceFolder}\\examples'; cl.exe /EHsc /std:c++latest /I.. /Fe:enum_string_example.exe enum_string.cpp enum_string_main.cpp; Pop-Location",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "generate documentation",
			"type": "shell",
			"command": "Push-Location '${workspaceFolder}'; doxygen Doxyfile; Pop-Location",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}